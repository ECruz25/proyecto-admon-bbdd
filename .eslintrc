{
  "env": {
    "es6": true,
    "browser": true
  },
  "extends": ["google"],
  "rules": {
    "linebreak-style": "off",
    "no-console": 0,
    "comma-dangle": 1,
    "no-unused-vars": 1,
    "arrow-parens": ["error", "as-needed"],
    "UnhandledPromiseRejectionWarning": 0
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "plugins": ["html", "react"]
}
